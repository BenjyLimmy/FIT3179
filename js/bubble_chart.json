{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 640,
  "height": 350,

  "data": {
    "url": "https://raw.githubusercontent.com/BenjyLimmy/FIT3179/refs/heads/main/data/v9-Global%20Country%20Emissions.csv"
  },
  "config": {
    "background": "transparent",
    "view": {
      "stroke": "transparent"
    },
    "text": { "fontWeight": "bold", "color": "#404040", "font": "Roboto" },
    "axis": {
      "labelFont": "Roboto",
      "titleFont": "Roboto",
      "labelFontSize": 9,
      "titleFontSize": 12,
      "grid": false
    },
    "legend": { "labelFont": "Roboto", "titleFont": "Roboto" }
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2013,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Year == Year_selection" },
    { "filter": "datum['GDP per capita ($)'] > 0" },
    { "filter": "datum['total_emissions_per_capita'] > 0" },
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {
      "calculate": "datum['total_emissions_per_capita'] * datum.Population",
      "as": "Total_emissions"
    },
    {
      "calculate": "datum['Total_emissions'] / 1000",
      "as": "Total_emissions_kilotonnes"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "text",
        "fontSize": 180,
        "align": "center",
        "baseline": "middle",
        "color": "#e2e0e0",
        "fontWeight": "bold",
        "opacity": 0.2
      },
      "encoding": {
        "text": { "field": "Year" }
      }
    },
    {
      "selection": {
        "grid": {
          "type": "interval",
          "bind": "scales"
        },
        "highlight": {
          "type": "point",
          "on": "mouseover",
          "clear": "mouseout"
        }
      },
      "mark": {
        "type": "circle",
        
        "cursor": "pointer"
        
      },
      "encoding": {
        "x": {
          "field": "GDP per capita ($)",
          "type": "quantitative",
          "axis": { "tickCount": 2, "grid": false },
          "scale": { "type": "log", "domain": [400, 120000] },
          "title": "Gross Domestic Product (GDP) per Capita ($)"
        },
        "y": {
          "field": "total_emissions_per_capita",
          "type": "quantitative",
          "title": "Total Fuel Emissions per Capita (tonnes/person)",
          "axis": { "tickCount": 2, "grid": false },
          "scale": { "type": "log", "domain": [0.005, 1.0] }
        },
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 300, 500, 1000]
          },
          "legend": { "title": "Population", "format": ".1s" }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#1f78b4",
              "#F9BF6E",
              "#F0E442",
              "#a6cee3",
              "#33a02c",
              "#4392F1"
            ]
          },
          "legend": { "title": "Continent" }
        },
        "tooltip": [
          { "field": "Entity", "type": "nominal", "title": "Country" },
          { "field": "Year", "type": "ordinal", "title": "Year" },
          {
            "field": "GDP per capita ($)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP per Capita ($)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "total_emissions_per_capita",
            "type": "quantitative",
            "format": ".4f",
            "title": "Emissions per Capita (tonnes)"
          },
          {
            "field": "Total_emissions_kilotonnes",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Total Emissions (kilotonnes)"
          }
        ],
        "opacity": {
          "condition": {
            "selection": "highlight",
            "value": 0.8
          },
          "value": 0.2
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -14,
        "fontSize": 11.5,
        "fontStyle": "italic",
        "fontWeight": "bolder",
        "cursor": "pointer"
      },
      "encoding": {
        "x": {
          "field": "GDP per capita ($)",
          "type": "quantitative",
          "axis": { "tickCount": 2, "grid": false },
          "scale": { "type": "log", "domain": [400, 120000] },
          "title": "Gross Domestic Product (GDP) per Capita ($)"
        },
        "y": {
          "field": "total_emissions_per_capita",
          "type": "quantitative",
          "title": "Total Fuel Emissions per Capita (tonnes/person)",
          "axis": { "tickCount": 2, "grid": false },
          "scale": { "type": "log", "domain": [0.005, 1.0] }
        },
        "text": { "field": "Entity", "type": "nominal" },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#1f78b4",
              "#F9BF6E",
              "#F0E442",
              "#a6cee3",
              "#33a02c",
              "#4392F1"
            ]
          },
          "legend": { "title": "Continent" }
        },
        "opacity": {
          "condition": {
            "test": "datum['Entity'] == 'Singapore' || datum['Entity'] == 'Malaysia' || datum['Entity'] == 'Qatar' ||  datum['Entity'] == 'Yemen' ||  datum['Entity'] == 'United States' ||  datum['Entity'] == 'Palau' ||  datum['Entity'] == 'Venezuela' ||  datum['Entity'] == 'United States of America' ||  datum['Entity'] == 'Australia' ||  datum['Entity'] == 'Nigeria'||  datum['Entity'] == 'Greenland'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Entity", "type": "nominal", "title": "Country" },
          { "field": "Year", "type": "ordinal", "title": "Year" },
          {
            "field": "GDP per capita ($)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP per Capita ($)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "total_emissions_per_capita",
            "type": "quantitative",
            "format": ".4f",
            "title": "Emissions per Capita (tonnes)"
          },
          {
            "field": "Total_emissions_kilotonnes",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Total Emissions (kilotonnes)"
          }
          
        ]
      }
    }
  ]
}
